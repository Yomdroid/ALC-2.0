<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yoma.user.tictactoe">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".About" />
        <activity android:name=".Human3" />
        <activity android:name=".Human4" />
        <activity android:name=".Human5" />
        <activity android:name=".AIBrain3" />
        <activity android:name=".AIBrain4" />
        <activity android:name=".AIBrain5" />
        <activity android:name=".PlayerActivity" />
        <activity android:name=".SelectTileActivity" />
        <activity android:name=".PickActivity" />
        <activity android:name=".MultiplayerActivity" />
        <activity android:name=".TileActivity"></activity>
    </application>

</manifest>